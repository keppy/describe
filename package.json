{
  "name": "@keppylab/describe",
  "version": "1.0.2",
  "description": "describe - Speak systems into existence. Transform infrastructure from configuration to conversation.",
  "main": "describe.py",
  "bin": {
    "describe": "bin/describe"
  },
  "scripts": {
    "postinstall": "node scripts/setup.js",
    "start": "python describe.py",
    "dev": "python describe.py --debug",
    "test": "python -m pytest tests/",
    "lint": "ruff check .",
    "format": "ruff format ."
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "package-manager",
    "mcp-server",
    "describe",
    "tools"
  ],
  "author": "James Dominguez",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keppy/describe.git"
  },
  "mcp": {
    "serverType": "python",
    "runtime": "python3",
    "tools": [
      {
        "name": "list",
        "description": "List all available MCP servers in the registry"
      },
      {
        "name": "search",
        "description": "Search for MCP servers by name or description",
        "inputSchema": {
          "type": "object",
          "properties": {
            "query": {
              "type": "string",
              "description": "Search query"
            }
          },
          "required": [
            "query"
          ]
        }
      },
      {
        "name": "install",
        "description": "Install an MCP server from the registry",
        "inputSchema": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "Name of the server to install"
            }
          },
          "required": [
            "name"
          ]
        }
      },
      {
        "name": "uninstall",
        "description": "Remove an installed MCP server",
        "inputSchema": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "Name of the server to uninstall"
            }
          },
          "required": [
            "name"
          ]
        }
      },
      {
        "name": "installed",
        "description": "List all currently installed MCP servers"
      }
    ]
  },
  "files": [
    "describe.py",
    "config_manager.py",
    "pyproject.toml",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "logo.svg",
    "logo-dark.svg",
    "icon.svg",
    "favicon.svg",
    "bin/",
    "scripts/",
    "tests/"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
